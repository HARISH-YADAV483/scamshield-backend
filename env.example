# ScamShield Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5001

# MongoDB Atlas Connection String
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/scamshield?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OpenAI API Key (For AI scam analysis feature)
OPENAI_API_KEY=sk-your-openai-api-key

# Cloudinary Configuration (https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# SendGrid Email Configuration (https://sendgrid.com)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (Update this when you deploy your frontend)
FRONTEND_URL=https://scamshiild-2.onrender.com

